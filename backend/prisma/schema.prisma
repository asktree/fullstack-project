generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Interviewer {
  id             Int            @id @default(autoincrement())
  interviews     Interview[]
  // availabilities Availability[]
}

model Availability {
  id            Int         @id @default(autoincrement())
  // interviewer   Interviewer @relation(fields: [interviewerId], references: [id])
  start         DateTime
  end           DateTime
  interviewerId Int
}

model Candidate {
  id         Int         @id @default(autoincrement())
  interviews Interview[]
}

model Interview {
  id            Int         @id @default(autoincrement())
  interviewer   Interviewer @relation(fields: [interviewerId], references: [id])
  interviewerId Int
  candidate     Candidate   @relation(fields: [candidiateId], references: [id])
  candidiateId  Int
  start         DateTime
}
